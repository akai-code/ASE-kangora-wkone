{
  "name": "robbot-ml",
  "scopeName": "source.robbot-ml",
  "fileTypes": [
    ".rob"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.robbot-ml",
      "match": "\\b(Clock|Forward|bool|cm|else|getDistance|getTimestamp|if|let|loop|mm|number|setSpeed|var|void)\\b"
    },
    {
      "name": "string.quoted.double.robbot-ml",
      "begin": "\"",
      "end": "'",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.robbot-ml",
          "begin": "/\\*\\*/",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.robbot-ml"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.robbot-ml"
            }
          }
        },
        {
          "begin": "//\n\r",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.robbot-ml"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.robbot-ml"
        }
      ]
    },
    "string-character-escape": {
      "name": "constant.character.escape.robbot-ml",
      "match": "\\\\(x[0-9A-Fa-f]{2}|u[0-9A-Fa-f]{4}|u\\{[0-9A-Fa-f]+\\}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.|$)"
    }
  }
}
